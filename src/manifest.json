{
    "manifest_version": 2,
    "name": "Format Copy",
    "description": "Format selected text and copy clipboard it.",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "contextMenus"
    ]
}